    		inteiro idade

		escreva("Qual a idade? ")
		leia(idade)

		Infantil A = 5-7
		Infantil B = 8-10
		Juvenil A = 11-13
		Juvenil B = 14-17
		Maiores de 18 = >18

		se (idade < 5)
		escreva("Não há categoria")
		senao se (idade <= 7)
		escreva("Categoria A")
		senao se (idade <= 10)
		escreva("Infatil B")
		senao se (idade <= 13)
		escreva("Juvenil A")
		senao se(idade <= 17)
		escreva("Juvenil B")
		senao se(idade >= 18)
		escreva("Maiores de 18")

