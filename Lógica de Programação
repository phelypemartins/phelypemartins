		real peso

		escreva("Digite o peso do atleta: \n")
		leia(peso)

		se (peso <= 57)
		escreva("Peso Pena")
		senao se(peso <= 63)
		escreva("Peso leve")
		senao se(peso <= 69)
		escreva("Peso Meio-médio")
		senao se(peso <= 75)
		escreva("Peso médio")
		senao se(peso <= 81)
		escreva("Peso Meio-pesado")
		senao se(peso <= 91)
		escreva("Peso Pesado")
		senao
		escreva("Não encontrado em nenhuma categoria")

