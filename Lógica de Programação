    		inteiro op
		

		escreva("Menu Principal\n")
		escreva("1 - Fim\n")
		escreva("2 - Cadastro\n")
		escreva("3 - Consulta\n")

		escreva("Digite uma opção válida: ")

		leia(op)

		se (op <= 1)
		escreva("1 - Fim")
		senao se (op <= 2)
		escreva("2 - cadastro")
		senao se (op <= 3)
		escreva("3 - Consulta")
		senao
		escreva("Opção inválida")

